{
  "name": "openclaw-omnibridge",
  "version": "0.1.0",
  "private": true,
  "license": "MPL-2.0",
  "description": "Multi-channel secure bridge for OpenClaw agents with Status parity-plus architecture",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/index.js",
    "start:fastify": "node dist/src/ingress/fastify/main.js",
    "start:nest": "node dist/src/ingress/nest/main.js",
    "start:nest:docker": "docker compose --profile nest up --build openclaw-nest",
    "test:docker": "docker compose up --build openclaw-test",
    "test:docker:gpu": "docker compose -f docker-compose.yml -f docker-compose.gpu.yml up --build openclaw-test",
    "test:unit": "npm run build && node --test dist/tests/*.test.js",
    "test:integration": "npm run build && node --test dist/tests/integration/*.test.js",
    "test:formal": "./scripts/run-tlc.sh",
    "test": "npm run test:unit && npm run test:integration",
    "selfcheck": "node dist/src/index.js --selfcheck"
  },
  "dependencies": {
    "@waku/sdk": "^0.0.31",
    "@fastify/raw-body": "^5.0.0",
    "@nestjs/common": "^11.1.0",
    "@nestjs/core": "^11.1.0",
    "@nestjs/platform-fastify": "^11.1.0",
    "fastify": "^5.2.1",
    "reflect-metadata": "^0.2.2",
    "redis": "^4.7.0",
    "rxjs": "^7.8.1",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "typescript": "^5.8.2"
  }
}
