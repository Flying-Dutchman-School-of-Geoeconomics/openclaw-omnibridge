# Core
OPENCLAW_ENV=production
OPENCLAW_LOG_LEVEL=info
OPENCLAW_AUDIT_LOG_PATH=./var/audit.log
OPENCLAW_REPLAY_TTL_MS=600000
OPENCLAW_IDEMPOTENCY_TTL_MS=604800000
OPENCLAW_RATE_LIMIT_PER_MIN=60
OPENCLAW_HTTP_PORT=8080
OPENCLAW_POLICY_PATH=./config/policy.json
STORE_BACKEND=memory
REDIS_URL=redis://127.0.0.1:6379
REDIS_KEY_PREFIX=openclaw

# Status (Waku)
STATUS_ENABLED=true
STATUS_WAKU_BOOTSTRAP_NODES=/dns4/node-01.status.example/tcp/8000/wss/p2p/16Uiu2...
STATUS_PRIVATE_KEY_HEX=0xREPLACE
STATUS_ALLOWED_SENDERS=0xsender1,0xsender2
STATUS_COMMUNITY_ID=0xcommunity
STATUS_CHAT_ID=0xchat
STATUS_EXPECTED_TOPIC=/openclaw/1/chat/proto

# WhatsApp Cloud API
WHATSAPP_ENABLED=false
WHATSAPP_APP_SECRET=replace-me
WHATSAPP_VERIFY_TOKEN=replace-me
WHATSAPP_PHONE_NUMBER_ID=123456789
WHATSAPP_ACCESS_TOKEN=EAAB...
WHATSAPP_ALLOWED_SENDERS=15550001111,15550002222

# Telegram Bot API
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=replace-me
TELEGRAM_WEBHOOK_SECRET_TOKEN=replace-me
TELEGRAM_ALLOWED_CHAT_IDS=1234,5678

# Signal (signal-cli)
SIGNAL_ENABLED=false
SIGNAL_RPC_URL=http://127.0.0.1:8080
SIGNAL_TRUSTED_PEERS=+15551234567,+15557654321

# Discord
DISCORD_ENABLED=false
DISCORD_APPLICATION_ID=1234567890
DISCORD_PUBLIC_KEY=hex-ed25519-public-key
DISCORD_BOT_TOKEN=replace-me
DISCORD_ALLOWED_GUILDS=123456,654321

# Slack
SLACK_ENABLED=false
SLACK_SIGNING_SECRET=replace-me
SLACK_BOT_TOKEN=xoxb-...
SLACK_ALLOWED_CHANNELS=C0123,C0456

# Email
EMAIL_ENABLED=false
EMAIL_IMAP_HOST=imap.example.com
EMAIL_IMAP_PORT=993
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=bot@example.com
EMAIL_PASSWORD=replace-me
EMAIL_ALLOWED_SENDERS=ops@example.com,alerts@example.com
EMAIL_REQUIRE_DKIM_PASS=true

# Bridge fanout toggles
BRIDGE_ENABLE_DISCORD=false
BRIDGE_ENABLE_SLACK=false
BRIDGE_ENABLE_TELEGRAM=false
BRIDGE_ENABLE_WHATSAPP=false
BRIDGE_ENABLE_SIGNAL=false
BRIDGE_ENABLE_EMAIL=false
